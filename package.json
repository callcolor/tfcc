{
  "name": "com.kansascitygeek.tfcc",
  "displayName": "Tabletop RPG Calculator",
  "version": "1.0.0",
  "description": "Table-top Fantasy Currency Converter",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:react",
    "build:cordova": "cordova build android --release",
    "build:react": "rm -Rf www/* && cd app && npm run build && cp -r build/* ../www",
    "run": "cordova run",
    "start": "cd app && npm run start"
  },
  "devDependencies": {
    "cordova-android": "^9.0.0",
    "cordova-plugin-whitelist": "^1.3.4"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  }
}
